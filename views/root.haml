#sign_in
  - if @username
    %form{:method => "link", :action => "/logout"}
      = partial :styled_button, :locals => {:text => "Logout #{@username}"}
  - else
    #sign_in_button
    %form{:method => "post", :action => google_openid_action}
      = partial :google_button, :locals => {:text => "Sign in with"}
