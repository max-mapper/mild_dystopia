#posts
  - @posts.each do |post|
    .post
      .author
        %img{:src => gravatar_url(post["email"]), :class => "gravatar"}
        %p.username= post["author"]
      .content
        - if post["image"]
          %a{:href => post["image"]}
            %img{:src => post["image"]}
        %p= post["post"]
